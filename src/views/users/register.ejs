<body>
    <%- include("../partials/header.ejs") %>
    <div class="Formulario-de-Registro">
   <br>
   <br>
    </div>
    <main>
        <form action="/registrarse" method="post" class= "register-form" enctype="multipart/form-data"> 
            <h3>Formulario de Registro</h3>
            <div class ="errores">
                <ul></ul>
            </div> 
            <div>
                <label for="name"></label>
                <input class= "formularioColor" type="text" name="firstName" id="nombre" placeholder="Ingresa tu Nombre" value="<%= locals.old ? old.firstName: null %>">
                <% if (locals.errors && errors.firstName) { %>
                    <p class="erroresBack"><%= errors.firstName.msg %></p>
                <% } %>
            </div>
            <div>
                <label for="Apellido"></label>
                <input class= "formularioColor" type="text" name="lastName" id="Apellido" placeholder="Ingresa tu Apellido" value="<%= locals.old ? old.lastName: null %>">
                <% if (locals.errors && errors.lastName) { %>
                    <p class="erroresBack"><%= errors.lastName.msg %></p>
                <% } %>
            </div>
            <div>
                <label for="email"></label>
                <input class= "formularioColor" type="email" name="email" id="Email" placeholder="Ingresa tu Email" value="<%= locals.old ? old.email: null %>">
                <% if (locals.errors && errors.email) { %>
                    <p class="erroresBack"><%= errors.email.msg %></p>
                <% } %>
            </div>
            <div>
                <label for="Contraseña"> </label>
                <input class= "formularioColor" type="password" name="password" id="Contraseña" placeholder="Ingresa tu Contraseña" >
                <% if (locals.errors && errors.password) { %>
                    <p class="erroresBack"><%= errors.password.msg %></p>
                <% } %>
            </div>
        
            <div>
                <label for="Confirmar Contraseña"></label>
                <input class= "formularioColor" type="password" name="passwordconf" id="Confirmar-Contraseña" placeholder="Confirmar Contraseña" >
                <% if (locals.errors && errors.passwordconf) { %>
                    <p class="erroresBack"><%= errors.passwordconf.msg %></p>
                <% } %>
            </div>
            
            
            <div>
                <label for="genero">Hombre</label>
                <input type="radio" name="gender" id="opcion1" value="hombre" <%= locals.old && old.gender === "hombre"  ? "checked":"" %>>

                <label for="genero">Mujer</label>
                <input type="radio" name="gender" id="opcion2" value="mujer" <%= locals.old && old.gender === "mujer"  ? "checked":"" %>>
                <% if (locals.errors && errors.gender) { %>
                    <p class="erroresBack"><%= errors.gender.msg %></p>
                <% } %>
            </div>
            <div>
                <label for="Fecha de Nacimiento"></label>
                <input type="date" name="date" id="Fecha-de-Nacimiento" value="<%= locals.old ? old.date: null %>">
                <% if (locals.errors && errors.date) { %>
                    <p class="erroresBack"><%= errors.date.msg %></p>
                <% } %>
            </div>
            <div>
                <label for="name"></label>
                <input class= "formularioColor" type="text" name="phoneNumber" id="Celular" placeholder="Ingresa tu Celular" value="<%= locals.old ? old.phoneNumber: null %>">
                <% if (locals.errors && errors.phoneNumber) { %>
                    <p class="erroresBack"><%= errors.phoneNumber.msg %></p>
                <% } %>
            </div>
            
            <div>
                <label>Al registrarte estas aceptando Terminos y condiciones</label>
                <input type="checkbox" name="terms" value="si" <%= locals.old && old.terms === "si"  ? "checked":"" %>>
                <% if (locals.errors && errors.terms) { %>
                    <p class="erroresBack"><%= errors.terms.msg %></p>
                <% } %>
            </div>
            <button type="text" class="submit">Registrarse</button>
        </form>
    </main>
<br>
<%- include("../partials/footer") %>
</body>
</html>
