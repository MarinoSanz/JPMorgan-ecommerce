        background-color: #c9200a;
    }
    div.errores,
    .erroresBack{
        color:red;
        list-style-type: none;
        padding: 10px;
        border-radius: 20px;
        font-weight: bold;
        font-size: 0.8rem;
        margin: 1px;

    }

    @media (max-width: 769px) {
        main {
            margin-top: 80px;
        }
