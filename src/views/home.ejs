<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head") %>
<style>
     body{
        background-image: url("https://i.ibb.co/gSSdWbv/alformbraroja.jpg");
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
        align-items: center;
        font-family: 'Roboto', sans-serif;
        
    }
    h2{
        color:rgb(0, 0, 0);
        background-color: rgba(255, 255, 255, 0.2);
        justify-content: center;
        text-align: center;
        padding-bottom: 1.5em;
        font-size: 40px
    }

    .row-1 {
        align-items: center;
        justify-content: space-around;
        
    }
    .row {
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        justify-content: space-around;
        
    }
    .col-2 {
        align-items: center;
        text-align: center;
    }

    .titles {
        text-align: center;
        margin: 0 auto 80px;
        position: relative;
        padding-top: 40px;
    }

    .titles::after {
        content: "";
        background: #ff523b;
        width: 80%;
        height: 5px;
        border-radius: 5px;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%)
        }
     /* empieza slider */
    .slider {
        width: 100%;
        height: 100vh;
        margin: auto;
        overflow: hidden;
    
    }
    .slider ul {
        display: flex;
        padding: 0;
        margin: 0;
        width: 400%;

        animation: cambio 20s infinite;
        animation-direction: alternate;
    }
    .slider li {
        width: 100%;
        height: 100%;
        list-style: none;
    }
    .slider img {
        width: 100%;
        height: 100%;
        margin: auto;
    }
    @keyframes cambio {
        0% {margin-left: 0;}
        20% {margin-left: 0;}

        25% {margin-left: -100%;}
        45% {margin-left: -100%;}

        50% {margin-left: -200%;}
        70% {margin-left: -200%;}

        75% {margin-left: -300%;}
        100% {margin-left: -300%;}
    }
     /* termina slider */

     /* empieza categorías */
     .categories {
        background-color: rgba(0, 0, 0, 0.3)
     }
     .col-3 {
        position: relative;
     }
     .image__img {
         display: block;
     }
     .image__overlay {
         position: absolute;
         top: 0;
         left: 0;
         width: 100%;
         height: 100%;
         background: rgba(0,0,0,0.6);
         color: whitesmoke;
         display: flex;
         flex-direction: column;
         align-items: center;
         justify-content: center;
         opacity: 0;
         transition: opacity 0.25s;
     }
     .image__overlay--blur {
        backdrop-filter: blur(5px);
     }
     .image__overlay > * { 
        transform: translateY(20px);
        transition: transform 0.25s;
     }
     .image__overlay:hover {
         opacity: 1;
     }
     .image__overlay:hover > *{
         transform: translateY(0);
     }
     .image__title {
         font-size: 2em;
         font-weight: bold;
     }
     .image__description {
         font-size: 1.25em;
         margin-top: 0.25em;
     }
    .small-container {
        max-width: 1080px;
        margin: auto;
        padding-left: 25px;
        padding-right: 25px;
        padding-top: 0px;
        padding-bottom: 50px;

    }
    /* termina categorías */

    /* empieza productos sugeridos */
    .col-4 {
        flex-basis: 20%;
        padding: 5px;
        min-width: 200px;
        margin-bottom: 50px;
        transition: transform 0.5s;
        background-color: rgba(253, 253, 253, 0.6)
    }
    .col-4 img {
        width: 100%;
    }
    .col-4:hover {
       transform: translateY(-6px)
    }
    /* termina productos sugeridos */
    @media (max-width: 769px) {
        .col-2 {
            display: none;
        }
        .slider {
            height: 80vh;
        }
        .col-3 {
            padding-top: 0em;
            padding-bottom: 2em;
        }
        .rating {
            display: none;
        }
        .image__img {
            max-width: 200px;
            max-height: 170px;
            
        }
        .titles {
            padding: 0;
        }
    }

    @media (max-width: 450px) {
        .image__img {
            max-width: 300px;
            
        }
        .slider {
            display: none;
        }
        .categories {
            padding-top: 60px;
        }
        .titles {
            margin-bottom: 30px;
        }
       .small-container {
           padding-bottom: 0;
       }
       h2{
        font-size: 1.5em
    }
    }
</style>
<body>
    <%- include("./partials/header.ejs") %>

<main>
<!-- abre slider  -->
    <div class="slider">
        <ul>
            <li><img src="/images/slifull1.png" width="500px" height="500px" alt=""></li>
            <li><img src="/images/slifull2.png" alt=""></li>
            <li><img src="/images/slifull3.png" alt=""></li>
            <li><img src="/images/slifull4.png" alt=""></li>
        </ul>
    </div>
<!-- cierra slider -->
<br>
<!-- abre categorías  -->
    <div class="categories">
        <h2 class="titles">Categorías</h2>
        <div class="small-container">
            <div class="row">
                <% let value1 = Math.floor(Math.random() * 3)  %>
                <div class="col-3"><a href="/productos/buscar?search=<%= categorias[value1].name %>">
                    <img class ="image__img" src="/images/categories/<%= categorias[value1].categoriaImg %>" width="350px" height="400px" href="#">
                        <div class="image__overlay image__overlay--blur">
                            <div class="image__title"><%= categorias[value1].name %></div>
                        </div></a>
                </div>
                <% let value2 = Math.floor((Math.random() * 3)+3)  %>
                <div class="col-3"><a href="/productos/buscar?search=<%= categorias[value2].name %>">
                    <img class ="image__img" src="/images/categories/<%= categorias[value2].categoriaImg %>" width="350px" height="400px" href="#">
                        <div class="image__overlay image__overlay--blur">
                            <div class="image__title"><%= categorias[value2].name %></div>

                        </div>
                </div></a>
                <% let value3 = Math.floor((Math.random() * 3)+6)  %>
                <div class="col-3"><a href="/productos/buscar?search=<%= categorias[value3].name %>">
                    <img class ="image__img" src="/images/categories/<%= categorias[value3].categoriaImg %>" width="350px" height="400px" href="#">
                        <div class="image__overlay image__overlay--blur">
                            <div class="image__title"><%= categorias[value3].name %></div>
                        </div>
                </div></a>
            </div>
        </div>
    </div>
<!-- cierra categorías  -->

<!-- abre productos sugeridos  -->
<div class="categories">
    <h2 class="titles">Productos Destacados</h2>
        <div class="row">
            <% products.forEach( product => { %>
                <% if (product.precio >= 150000){ %>
                <div class="col-4">
                    <a href="/productos/<%= product.id %>">
                        <img src="/images/products/<%= product.productImg %>" width="250px" height="300px" href="">
                    </a>
                    <h3><%= product.nombre %></h3>
                    <p>$<%= product.precio %></p>

                </div>
                <% }  %>
                <!-- <a href="/carrito">
                    <button type="text" id="cartBtn" class="submit">Agregar al Carrito</button>
                </a> -->
            <% }) %>
        </div>
</div>
<!-- cierra productos sugeridos  -->


</main>
<br>
<br>


<%- include("./partials/footer") %>

    
</body>
</html>

































































































